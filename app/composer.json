{
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^7.4",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "erusev/parsedown": "^1.7",
    "google/recaptcha": "^1.2",
    "ramsey/uuid": "^4.2",
    "symfony/yaml": "^5.2",
    "twig/twig": "^3.0"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
}
